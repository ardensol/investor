<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Investment Opportunities</h2>
        <h3 class="section-subheading text-muted">Amazing Business Opps! 100% Return Guaranteed..</h3>
      </div>
    </div>
    <div class="row">
      <% @investments.each do |investment| %>
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a href="/investments/<%= investment.id %>" class="portfolio-link" data-toggle="modal">
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <%= image_tag investment.sub_image, class: 'img-responsive' %>
            </a>
            <div class="portfolio-caption">
              <h4><%= investment.name %></h4>
              <p class="text-muted"><%= investment.description.truncate(100) %></p>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</section>

