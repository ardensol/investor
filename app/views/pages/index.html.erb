<!-- Header -->
<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Welcome To BuzzBee!</div>
      <div class="intro-heading">Discover. Connect. Invest.</div>
      <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
    </div>
  </div>
</header>
<!-- Services Section -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">How it Works</h2>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-search fa-stack-1x fa-inverse"></i>
                    </span>
        <h4 class="service-heading">Discover</h4>
        <p class="text-muted">Search our database of opportunities from home flips to buying a business.</p>
      </div>
      <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-map-o fa-stack-1x fa-inverse"></i>
                    </span>
        <h4 class="service-heading">Connect</h4>
        <p class="text-muted">We connect you with the opportunity's representative.</p>
      </div>
      <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-star-o fa-stack-1x fa-inverse"></i>
                    </span>
        <h4 class="service-heading">Invest</h4>
        <p class="text-muted">Find one you like? Invest away.</p>
      </div>
    </div>
  </div>
</section>

<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Opportunities</h2>
        <h3 class="section-subheading text-muted"></h3>
      </div>
    </div>
    <div class="row">
      <% @investments.each do |investment| %>
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a href="/investments/<%= investment.id %>" class="portfolio-link" data-toggle="modal">
            <div class="portfolio-hover">
              <div class="portfolio-hover-content">
                <i class="fa fa-plus fa-3x"></i>
              </div>
            </div>
            <%= image_tag investment.sub_image, class: 'img-responsive' %>
            </a>
            <div class="portfolio-caption">
              <h4><%= investment.name %></h4>
              <p class="text-muted"><%= investment.description.truncate(100) %></p>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</section>

<!-- Clients Aside -->
<aside class="clients">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-6">
        <a href="#">
          <img src="img/logos/envato.jpg" class="img-responsive img-centered" alt="">
        </a>
      </div>
      <div class="col-md-3 col-sm-6">
        <a href="#">
          <img src="img/logos/designmodo.jpg" class="img-responsive img-centered" alt="">
        </a>
      </div>
      <div class="col-md-3 col-sm-6">
        <a href="#">
          <img src="img/logos/themeforest.jpg" class="img-responsive img-centered" alt="">
        </a>
      </div>
      <div class="col-md-3 col-sm-6">
        <a href="#">
          <img src="img/logos/creative-market.jpg" class="img-responsive img-centered" alt="">
        </a>
      </div>
    </div>
  </div>
</aside>

<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">INVEST</h2>
        <h3 class="section-subheading text-muted">Let us know if you're interested in any current or future opportunities.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
          <div class="row">
            <div class="col-md-12" style="text-align: center;">


              <%= render template: 'emails/new'%>
            </div>
            <div class="col-md-6">

            </div>
            <div class="clearfix"></div>

          </div>
      </div>
    </div>
  </div>
</section>
